<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Request">

    <LinearLayout
        android:id="@+id/requestScreen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        >

        <TextView
        android:id="@+id/requestTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD CAREGIVER"
        android:textSize="40dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"/>

        <ImageView
        android:id="@+id/requestImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/email"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="187dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/requestTextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add your caregiver below through email."
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="130dp"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        />

        <EditText
        android:id="@+id/requestEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="413dp"
        android:background="@color/gray"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>


        <Button
        android:id="@+id/requestButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Request"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:backgroundTint="@color/teal_700" />

        <Button
        android:id="@+id/skipButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Skip"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:textSize="20dp" />

    </LinearLayout>
</RelativeLayout>