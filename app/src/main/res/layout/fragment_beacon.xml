<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BeaconFragment" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="317dp"
        android:layout_marginBottom="20dp">

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="317dp"
            android:isScrollContainer="true"
            android:padding="10dip"></TableLayout>
    </ScrollView>

    <EditText
        android:id="@+id/UUIDText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="@string/uuid_prompt"
        android:inputType="textShortMessage"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <EditText
            android:id="@+id/regionName"
            android:layout_width="171dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textShortMessage"
            android:hint="@string/region_prompt"/>

        <EditText
            android:id="@+id/major"
            android:layout_width="128dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textShortMessage|number"
            android:hint="@string/major_prompt"/>

        <EditText
            android:id="@+id/minor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="@string/minor_prompt"
            android:inputType="textShortMessage|number" />
    </LinearLayout>

    <Button
        android:id="@+id/start_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:backgroundTint="@color/teal_700"
        android:text="@string/start_scanning"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/stop_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:backgroundTint="@color/teal_700"
        android:text="@string/stop_scanning" />

</LinearLayout>