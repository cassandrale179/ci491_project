<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BeaconFragment"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="317dp"
        android:layout_marginBottom="20dp">

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="317dp"
            android:isScrollContainer="true"
            android:padding="10dip"></TableLayout>
    </ScrollView>

    <EditText
        android:id="@+id/UUIDText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="@string/uuid_prompt"
        android:inputType="textShortMessage"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/regionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/region_prompt"
            android:inputType="textShortMessage" />

        <EditText
            android:id="@+id/major"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/major_prompt"
            android:inputType="number" />

        <EditText
            android:id="@+id/minor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/minor_prompt"
            android:inputType="number" />
    </LinearLayout>

    <Button
        android:id="@+id/add_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:text="@string/add_region" />

    <TextView
        android:id="@+id/addRegionMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:textStyle="italic"
        android:layout_marginBottom="10dp"
        android:textColor="@color/red" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/teal_700"
            android:text="@string/start_scanning"
            android:textAllCaps="true"
            android:textSize="14sp" />

        <Button
            android:id="@+id/stop_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/teal_700"
            android:text="@string/stop_scanning"
            android:textAllCaps="true"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>